<p id="notice"><%= notice %></p>

<div class="container">
  <p>
    <strong>First name:</strong>
    <%= @contact.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @contact.last_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @contact.email %>
