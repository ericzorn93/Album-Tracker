<div class="container">

  <p id="notice"><%= notice %></p>

  <h3 align="center">Information About Album: <%= @album.title %></h3>

  <div class="collection">
    <!-- <p class="collection-item">
      <strong>Band:</strong>
      <%# @album.band %>
    </p> -->


    <p class="collection-item">
      <strong>Artist(s):</strong>
      <% if @album.artists.length > 1 %>
        <% @album.artists.each do |artist| %>
          <%= artist.name %> | Genre: <%= artist.genre %>,
        <% end %>
      <% else %>
        <% @album.artists.each do |artist| %>
          <%= artist.name %> | Genre: <%= artist.genre %>
        <% end %>
      <% end %>
    </p>

    <p class="collection-item">
      <strong>Band:</strong>
      <%= @album.band %>
    </p>

    <p class="collection-item">
      <strong>Title:</strong>
      <%= @album.title %>
    </p>

    <p class="collection-item">
      <strong>Genre:</strong>
      <%= @album.genre %>
    </p>

    <p class="collection-item">
      <strong>Year:</strong>
      <%= @album.year %>
    </p>

    <p class="collection-item">
      <strong>Plays:</strong>
      <%= @album.plays %>
    </p>

    <% if @album.record_label_id %>
      <p class="collection-item">
        <strong>Record Label:</strong>
        <%= RecordLabel.find(@album.record_label_id).name %>
      </p>
    <% else %>
      <p class="collection-item">
        <strong>Record Label:</strong>
        <em>*No Record Label Found</em>
      </p>
    <% end %>
  </div>

  <%= link_to 'Edit', edit_album_path(@album), class: 'waves-effect waves-light btn green' %> |
  <%= link_to 'Back', albums_path, class: 'waves-effect waves-light btn teal lighten-2' %>
</div>